{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OllamaGUI",
  "version": "0.1.1",
  "identifier": "io.medgm.ollamagui",
  "build": {
    "frontendDist": "../app/dist",
    "devUrl": "http://localhost:5173",
  "beforeDevCommand": "bash -lc 'cd ../app && npm run dev'",
  "beforeBuildCommand": "bash -lc 'cd ../app && npm install && npm run build'"
  },
  "app": {
    "windows": [
      {
        "title": "OllamaGUI",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
